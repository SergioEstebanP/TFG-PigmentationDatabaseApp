<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombrePigmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Pigmento 1"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/colorPigmento"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#317ef9"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="#000000" />


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape">

                <TextView
                    android:id="@+id/keySinonimo"
                    android:layout_weight="1"
                    android:padding="10dip"
                    android:text="Sinónimo"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valueSinonimo"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="Ocre Claro"
                    android:textColor="#000000" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape1">

                <TextView
                    android:id="@+id/keyFormula"
                    android:layout_weight="1"
                    android:padding="10dip"
                    android:text="Formula"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valueFormula"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="NaBrS"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape">

                <TextView
                    android:id="@+id/keyElemento"
                    android:layout_weight="1"
                    android:padding="10dip"
                    android:text="Elemento Químico"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valueElemento"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="Cd"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape1">

                <TextView
                    android:id="@+id/keyCoordenadas"
                    android:layout_weight="1"
                    android:padding="10dip"
                    android:text="Coord. Tricrómicas"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valueCoordenadas"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="100-45-54"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape">

                <TextView
                    android:id="@+id/keyColorBase"
                    android:layout_weight="1"
                    android:padding="10dip"
                    android:text="Color Base"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valueColorBase"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="Azul"
                    android:textColor="#000000" />
            </TableRow>


        </TableLayout>


        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="#000000" />

        <android.support.v7.widget.CardView
            android:id="@+id/colorimetria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7aadff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/colorimetriaDesKey"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:gravity="center"
                        android:text="COLORIMETRIA"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgColorimetria"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="11dp"
                        android:background="@drawable/down_arrow" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/colorimetriaDesValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardBackgroundColor="#e0e3e5"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/coordenadaR"
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15dp"
                                    android:text="Coponente Rojo: "
                                    android:textColor="#000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="9dp"
                                    android:background="#d1411d" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardBackgroundColor="#e0e3e5"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/coordenadaB"
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15dp"
                                    android:text="Componente Azul: "
                                    android:textColor="#000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="9dp"
                                    android:background="#1d9ade" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardBackgroundColor="#e0e3e5"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/coordenadaG"
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15dp"
                                    android:text="Componente Verde: "
                                    android:textColor="#000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="9dp"
                                    android:background="#1ad94d" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#e0e3e5"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="Espacio de color L*a*b"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <android.support.v7.widget.CardView
                            android:id="@+id/coordenadasLab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardBackgroundColor="#e0e3e5"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/coordenadaL"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="L: "
                                    android:textColor="#000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/coordenadaa"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="a: "
                                    android:textColor="#000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/coordenadab"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="b: "
                                    android:textColor="#000"
                                    android:textSize="16sp" />


                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ftiratr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c5f7c5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ftrAtrDesKey"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:gravity="center"
                        android:text="FTIR-ATR"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgFtiratr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="11dp"
                        android:background="@drawable/down_arrow" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/ftiratrDesValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <lecho.lib.hellocharts.view.LineChartView
                            android:id="@+id/irChartView"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:padding="10dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/drx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7aadff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/drxDesKey"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:gravity="center"
                        android:text="DRX"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgDrx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="11dp"
                        android:background="@drawable/down_arrow" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/drxDesValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <lecho.lib.hellocharts.view.LineChartView
                            android:id="@+id/rxChartView"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:padding="10dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/raman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c5f7c5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ramanDesKey"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:gravity="center"
                        android:text="RAMAN"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgRaman"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="11dp"
                        android:background="@drawable/down_arrow" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/ramanDesValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="40dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <lecho.lib.hellocharts.view.LineChartView
                            android:id="@+id/ramanChartView"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:padding="10dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>


