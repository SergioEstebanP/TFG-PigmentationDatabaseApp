<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombrePigmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Consulta Simple"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/porColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="50dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#f1f7b4"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="230dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:gravity="center"
                                android:text="Por color"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/imgPorColor"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="11dp"
                                android:background="@drawable/down_arrow" />

                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/parametrosColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardBackgroundColor="#e0e3e5"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15dp"
                                    android:text="Selecciona un color:"
                                    android:textColor="#000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/seleccionarColor"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="9dp"
                                    android:background="#000" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/porNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="50dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#52f9a0"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="230dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:gravity="center"
                                android:text="Por nombre"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/imgPorNombre"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="11dp"
                                android:background="@drawable/down_arrow" />

                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/parametrosNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardBackgroundColor="#e0e3e5"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15dp"
                                    android:text="Introduce un nombre:"
                                    android:textColor="#000"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/seleccionarNombre"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="#fff"
                                    android:hint="cadmio, negro humo"
                                    android:padding="10dp" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/porElementoQuimico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="50dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#f7985d"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="230dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:gravity="center"
                                android:text="Por elemento químico"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/imgPorElementoQuimico"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="11dp"
                                android:background="@drawable/down_arrow" />
                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/parametrosElementoQuimico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardBackgroundColor="#e0e3e5"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15dp"
                                    android:text="Introduce un elemnto químico:"
                                    android:textColor="#000"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/seleccionarElementoQuimico"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:padding="10dp"
                                    android:background="#fff"
                                    android:hint="Ag, plata, Aug, ORO ..." />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/busquedaSimple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#76bae8"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="Buscar !"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/lupa_black" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
